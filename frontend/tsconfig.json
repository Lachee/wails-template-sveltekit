{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"lib": [
			"ES5",
      "ES2015",
			"DOM"
		]
  },
  "include": [
    "vite.config.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
  ],

  /*
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
  */
}
